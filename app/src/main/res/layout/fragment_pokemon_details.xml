<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="@dimen/standard_margin"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="@dimen/standard_margin"
        card_view:cardElevation="@dimen/small_margin"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idImagen"
                android:layout_width="@dimen/imageSize_pokemon_item"
                android:layout_height="@dimen/imageSize_pokemon_item"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_margin="@dimen/standard_margin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/standard_margin"
                android:layout_marginTop="@dimen/standard_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idTitleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_marginTop"
                    android:fontFamily="@fonts/font_montserrat"
                    android:text="@string/title_name"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/textview_title_marginStart_pokemon_item"
                    android:layout_marginTop="@dimen/textview_title_margin_negative"
                    android:fontFamily="@fonts/font_montserrat"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idTitleHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:fontFamily="@fonts/font_montserrat"
                    android:text="@string/title_height"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/textview_title_marginStart_pokemon_item"
                    android:layout_marginTop="@dimen/textview_title_margin_negative"
                    android:fontFamily="@fonts/font_montserrat"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idTitleWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@fonts/font_montserrat"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/title_weight"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/textview_title_marginStart_pokemon_item"
                    android:layout_marginTop="@dimen/textview_title_margin_negative"
                    android:fontFamily="@fonts/font_montserrat"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>